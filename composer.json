{
  "name": "ivacuum/hosting",
  "description": "",
  "license": "MIT",
  "require": {
    "php": ">=7.4",
    "foolz/sphinxql-query-builder": "dev-master as 2.1.0",
    "guzzlehttp/guzzle": "^7.0",
    "ivacuum/generic": "^15.0",
    "laravel-notification-channels/telegram": "^0.5",
    "laravel/framework": "^8.0",
    "laravel/nova": "^3.0",
    "laravel/scout": "^8.0",
    "laravel/socialite": "^5.0",
    "league/commonmark": "^1.0",
    "league/flysystem-sftp": "^1.0",
    "livewire/livewire": "^2.0",
    "predis/predis": "^1.1",
    "stevebauman/purify": "^3.0",
    "symfony/css-selector": "^5.0",
    "symfony/dom-crawler": "^5.0"
  },
  "require-dev": {
    "barryvdh/laravel-debugbar": "^3.0",
    "barryvdh/laravel-ide-helper": "^2.1",
    "facade/ignition": "^2.0",
    "fakerphp/faker": "^1.10",
    "johnkary/phpunit-speedtrap": "^3.2",
    "laravel/telescope": "^4.0",
    "mockery/mockery": "^1.0",
    "nunomaduro/collision": "^5.0",
    "phpunit/phpunit": "^9.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "fresh": "@php artisan migrate:fresh --seed --seeder='App\\Seeder\\DatabaseSeeder' --ansi",
    "phpcs": "phpcs --standard=PSR12",
    "post-root-package-install": [
      "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate --ansi"
    ],
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover --ansi",
      "@php artisan vendor:publish --force --tag=livewire:assets --ansi"
    ],
    "post-update-cmd": [
      "@php artisan ide-helper:generate",
      "@php artisan nova:publish"
    ],
    "rector": "vendor/bin/rector process app tests --dry-run",
    "queue": "@php artisan queue:work --stop-when-empty --ansi",
    "test": "vendor/bin/phpunit --colors=always"
  },
  "extra": {
    "laravel": {
      "dont-discover": [
        "barryvdh/laravel-debugbar",
        "laravel/telescope"
      ]
    }
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://nova.laravel.com"
    },
    {
      "type": "vcs",
      "url": "https://github.com/ivacuum/SphinxQL-Query-Builder"
    }
  ]
}
